{
  "name": "gymgenius",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "test:all": "firebase emulators:start --project gymgenius-test --only firestore,auth & sleep 3 && turbo run test -- --run && kill %1",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yaml,yml}\"",
    "sync:lint": "syncpack lint",
    "sync:fix": "syncpack fix-mismatches",
    "sync:list": "syncpack list",
    "prepare": "husky install",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "precheck": "pnpm lint && pnpm typecheck && pnpm build && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "eslint": "^8.57.0",
    "firebase-tools": "^13.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "syncpack": "^13.0.0",
    "turbo": "^2.7.5"
  },
  "packageManager": "pnpm@10.29.3",
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "firebase": "^12.9.0"
  }
}
